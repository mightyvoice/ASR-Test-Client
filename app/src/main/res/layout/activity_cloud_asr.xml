<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloudRecognizer"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
        android:id="@+id/startCloudRecognitionButton"
        android:text="NUANCE ASR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/startGoogleAsrButton"
        android:text="Google ASR"
        android:onClick="startGoogleASR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/startAudioRecordButton"
        android:text="Start Record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/stopAudioRecordButton"
        android:text="Stop and Play"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cloudResultEditText"
        android:scrollbars = "vertical"
        android:hint="ASR result show here ..."
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20dp"/>

</LinearLayout>
